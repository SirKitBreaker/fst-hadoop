{
    "image": "docker.io/sirkitbreaker/base-hadoop:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:1": {
            "installZsh": "true",
            "username": "vscode",
            "uid": "1000",
            "gid": "1000",
            "upgradePackages": "true"
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [9870, 8088],

    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": "sudo $HADOOP_HOME/sbin/start-dfs.sh && sudo $HADOOP_HOME/sbin/start-yarn.sh && sudo $HADOOP_HOME/sbin/mr-jobhistory-daemon.sh start historyserver",

    // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
    "remoteUser": "vscode"
}
